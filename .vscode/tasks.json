{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/api/api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "args": [
                "xunit"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}